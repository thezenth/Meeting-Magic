<html lang="en">
<head>
	<% include ../partials/head %>
	<script src="/js/client_profile_settings.js"></script>
</head>

<body>
	<header>
		<% include ../partials/header-nav-bar %>
	</header>

	<div class="row">
      <div class="col s12 m10">
        <div class="card-panel">
			<h3>Tastes</h3>
  		  <h4>Food</h4>
  		  <form action="/user-prefs" method="post">

  			  <% for(var i=0; i<foods.length; i++) { %>

				  <% if (userPrefs.foodprefs.indexOf(foods[i]) == -1 ) { %>
					  <input type="checkbox" name="foodprefs[]" id='<%= "in--"+foods[i] %>' value='<%= foods[i] %>'>
				  <% } else { %>
					  <input type="checkbox" name="foodprefs[]" id='<%= "in--"+foods[i] %>' value='<%= foods[i] %>' checked>
				  <% } %>
				  <label for='<%= "in--"+foods[i] %>'><%= foods[i] %></label>
				  <br>
  				  <!-- <% if ( ( (i+1) % 3) == 0 ) { %>
  					  <br>
  				  <% } %> -->

  			  <% } %>
			  <br>
  			  <button type="submit" class="waves-effect waves-light btn">Done</button>

  		  </form>
        </div>
      </div>
    </div>


	</body>
</html>
